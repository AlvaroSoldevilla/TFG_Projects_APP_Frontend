<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TFG_Projects_APP_Frontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TFG_Projects_APP_Frontend"
    xmlns:pages="clr-namespace:TFG_Projects_APP_Frontend.Pages"
    xmlns:properties="clr-namespace:TFG_Projects_APP_Frontend.Properties"
    Title="Project Management APP"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="{x:Static properties:Resources.HomeNavigationTitle}"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="{x:Static properties:Resources.UserSettingsNavigationTitle}"
        ContentTemplate="{DataTemplate pages:UserSettingsPage}"
        Route="UserSettingsPage" />

    <ShellContent
        Title="{x:Static properties:Resources.AppSettingsNavigationTitle}"
        ContentTemplate="{DataTemplate pages:AppSettingsPage}"
        Route="AppSettingsPage" />

    <ShellContent
        Title="{x:Static properties:Resources.LogOutNavigationTitle}"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
</Shell>
