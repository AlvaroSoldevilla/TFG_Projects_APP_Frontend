<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TFG_Projects_APP_Frontend.Entities.Models"
             xmlns:dtos="clr-namespace:TFG_Projects_APP_Frontend.Entities.Dtos.Users"
             xmlns:pageModels="clr-namespace:TFG_Projects_APP_Frontend.PageModels"
             x:Class="TFG_Projects_APP_Frontend.Pages.MainPage"
             x:DataType="pageModels:MainPageModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <CollectionView ItemsSource="{Binding Projects}" 
                            SelectedItem="{Binding SelectedProject}"
                            SelectionChangedCommand="{Binding ProjectSelectedCommand}"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Project">
                        <Border Padding="5">
                            <StackLayout Padding="10">
                                <StackLayout Orientation="Horizontal" Spacing="8">
                                    <Label Text="{Binding Id}" FontSize="16"/>
                                    <Label Text="{Binding Title}" FontSize="16" />
                                </StackLayout>
                                <Label Text="{Binding Description}" FontSize="12" />
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <ActivityIndicator 
                IsRunning="{Binding Isloading}" 
                IsVisible="{Binding Isloading}" 
                HorizontalOptions="Center" 
                VerticalOptions="Center" 
                WidthRequest="50" 
                HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
