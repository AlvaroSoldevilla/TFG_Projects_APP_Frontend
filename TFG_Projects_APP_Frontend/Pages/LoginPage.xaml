<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TFG_Projects_APP_Frontend.Pages.LoginPage"
             xmlns:models="clr-namespace:TFG_Projects_APP_Frontend.Entities.Models"
             xmlns:dtos="clr-namespace:TFG_Projects_APP_Frontend.Entities.Dtos.Users"
             xmlns:pageModels="clr-namespace:TFG_Projects_APP_Frontend.PageModels"
             x:DataType="pageModels:LoginPageModel"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Shell.FlyoutBehavior="Disabled"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label 
                Text="Welcome!" 
                FontSize="32" 
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="10">
                <Entry 
                    x:Name="IP"
                    Placeholder="Server IP"
                    Text="{Binding Route, Mode=TwoWay}"
                    BackgroundColor="White"/>

                <Entry 
                    x:Name="Port"
                    Placeholder="Port"
                    Text="{Binding Port, Mode=TwoWay}"
                    BackgroundColor="White"/>
            </HorizontalStackLayout>

            <Entry 
                x:Name="Username"
                Placeholder="Username"
                Text="{Binding Username, Mode=TwoWay}"
                BackgroundColor="White"/>

            <Entry 
                x:Name="Email"
                Placeholder="Email"
                Text="{Binding Email, Mode=TwoWay}"
                Keyboard="Email"
                BackgroundColor="White"/>

            <Entry 
                x:Name="Password"
                Placeholder="Password"
                Text="{Binding Password, Mode=TwoWay}"
                IsPassword="True"
                BackgroundColor="White"/>

            <Button 
                Text="Login"
                Command="{Binding LoginCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                FontAttributes="Bold" />

            <Button 
                Text="Register"
                Command="{Binding RegisterCommand}"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>