<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TFG_Projects_APP_Frontend.Components.ConceptComponents.ConceptBoardComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Border Padding="10" BackgroundColor="DarkGrey">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16" />
        </Border.StrokeShape>
        <Label
            FontAttributes="Bold"
            FontSize="Medium"
            Text="{Binding Component.Title}" />
    </Border>
</ContentView>
