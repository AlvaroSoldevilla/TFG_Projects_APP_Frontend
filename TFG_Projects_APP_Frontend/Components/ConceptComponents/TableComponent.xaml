<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TFG_Projects_APP_Frontend.Components.ConceptComponents.TableComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Background="AliceBlue">
        <Label
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="{Binding Component.Title}"
            VerticalOptions="Center" />
        <HorizontalStackLayout x:Name="Buttons" />
        <ScrollView>
            <Grid x:Name="TableGrid" />
        </ScrollView>
    </VerticalStackLayout>
</ContentView>
