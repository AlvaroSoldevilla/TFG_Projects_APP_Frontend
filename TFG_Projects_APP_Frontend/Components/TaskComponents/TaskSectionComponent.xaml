<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TFG_Projects_APP_Frontend.Components.TaskComponents.TaskSectionComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:TFG_Projects_APP_Frontend.Components.TaskComponents"
    xmlns:models="clr-namespace:TFG_Projects_APP_Frontend.Entities.Models"
    x:DataType="components:TaskSectionComponent">
    <VerticalStackLayout>
        <Border Padding="5">
            <Border.GestureRecognizers>
                <DropGestureRecognizer AllowDrop="True" Drop="OnDrop" />
            </Border.GestureRecognizers>

            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="5">
                    <Button Clicked="Left_Clicked" Text="&lt;" />
                    <Label Text="{Binding Section.Title}" />
                    <Button Clicked="Right_Clicked" Text="&gt;" />
                </StackLayout>
                <Button
                    Grid.Row="1"
                    Clicked="Edit_Clicked"
                    Text="Edit" />
                <Button
                    Grid.Row="2"
                    Clicked="Delete_Clicked"
                    Text="Delete" />
                <Button
                    Grid.Row="3"
                    Clicked="Create_Task_Clicked"
                    Text="Create Task" />
                <ScrollView Grid.Row="4">
                    <StackLayout x:Name="TaskContainer" Padding="10" />
                </ScrollView>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>
