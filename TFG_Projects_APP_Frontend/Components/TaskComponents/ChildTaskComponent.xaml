<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TFG_Projects_APP_Frontend.Components.TaskComponents.ChildTaskComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:TFG_Projects_APP_Frontend.Components.TaskComponents"
    x:DataType="components:ChildTaskComponent">
    <VerticalStackLayout>
        <Border
            Margin="5"
            Padding="10"
            BackgroundColor="#f0f0f0">
            <StackLayout Spacing="5">
                <Label Text="{Binding ComponentTask.Title}" />
                <Label Text="{Binding ComponentTask.Description}" />
                <Label Text="{Binding ComponentTask.Progress, StringFormat='Progress: {0:F0}'}" />
                <Label Text="{Binding ComponentTask.LimitDate, StringFormat='Limit Date: {0:dd/MM/yyyy}'}" />
                <Label Text="{Binding ComponentTask.UserAssigned.Username, StringFormat='Assigned to: {0}'}" />
                <Label Text="{Binding ComponentTask.Priority.Name, StringFormat='Priority: {0}'}" />
                <Label Text="{Binding ComponentTask.CompletionDate}" />
                <Button Clicked="Delete_Clicked" Text="Delete Task" />
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>
